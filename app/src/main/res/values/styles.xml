<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Base" parent="AppTheme" > <!-- Extends AppTheme !-->
        <item name="colorPrimary">@color/ridemePrimaryBackgroundColor</item>
        <item name="colorPrimaryDark">@color/ridemeSecundaryBackgroundColor</item>
        <item name="colorAccent">@color/ridemeColorBackgroundAccent</item>

        <item name="actionMenuTextColor">@color/ridemeToolbarTextColor</item>

        <!-- Change background color of contextual toolbar !-->
        <item name="android:actionModeBackground">@color/md_blue_grey_500</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/ridemeBackgroundColor</item>

        <!-- DragUpSlide !-->
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="Theme.Flickr" parent="Theme.Base"/>

    <!-- Remove All Capital letters from the Button !-->
    <style name="Widget.Button" parent="Widget.Button">
        <item name="android:textAllCaps">false</item>
    </style>



    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">@color/ridemeToolbarTextColor</item>
        <item name="android:actionMenuTextColor">@color/ridemeToolbarTextColor</item>
        <item name="android:textColorSecondary">@color/ridemeToolbarTextColor</item>
        <item name="android:background">@color/ridemePrimaryBackgroundColor</item>
        <item name="colorControlHighlight">@color/ridemeBackgroundColor</item>
    </style>

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <!-- using the default, TextAppearance.AppCompat.Widget.ActionBar.Title, but just overriding 
        a few atributtes !-->
        <item name="android:textColor">@color/ridemeToolbarTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/ridemeToolbarTextColor</item>
    </style>

    <style name="ActionBarSubTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/ridemeToolbarTextColor</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
